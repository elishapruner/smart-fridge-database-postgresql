<a name="approve_orders"></a>
<div class="content-section-b">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Approve Orders</h2>

                <div class="row">
                    <% for (let i = 0; i < ingredientorder.length; i++) { %>
                        <% if (ingredientorder[i].approved === false) { %>
                            <div class="col-sm-6 col-md-4">
                                <div class="thumbnail">
                                    <div class="caption">
                                        <h3><%= ingredientorder[i].name %></h3>
                                        <p>Order ID: <%= ingredientorder[i].orderid %></p>
                                        <p>Category: <%= ingredientorder[i].category %></p>
                                        <p>Count: <%= ingredientorder[i].count %></p>
                                        <p>Price per item: $<%= ingredientorder[i].pricerperitem %></p>
                                        <p>Threshold: <%= ingredientorder[i].threshold %></p>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <form action="approve" method="UPDATE">
                                                    <input type="submit" value="Approve" class="btn btn-success"/>
                                                </form>
                                            </div>
                                            <div class="col-md-4">
                                                <!--<button class="btn btn-danger delete-order" data-id="<%= ingredientorder[i].orderid %>">Reject</button>-->
                                                <form action="/reject" method="DELETE">
                                                    <input type="submit" value="Reject" class="btn btn-danger" data-id="<%= ingredientorder[i].orderid %>" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                    <div>
                    </div>
                </div>
                <!-- /.container -->
