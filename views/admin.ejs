<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <title>Smart Fridge</title>
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/theme.css" rel="stylesheet">
</head>
<body>

<!-- Navigation -->
<nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
    <div class="container topnav">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand topnav" href="/">Smart Fridge</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/user">User</a>
                </li>
                <li>
                    <a href="/chef">Chef</a>
                </li>
                <li>
                    <a href="/admin">Admin</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Header -->
<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Administrator</h1>
                    <h3>Administrator Options</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <a href="#place_orders" class="btn btn-default btn-lg"><span class="network-name">Place Orders</span></a>
                        </li>
                        <li>
                            <a href="#approve_orders" class="btn btn-default btn-lg"><span class="network-name">Approve Orders</span></a>
                        </li>
                        <li>
                            <a href="#admin_reports" class="btn btn-default btn-lg"><span
                                        class="network-name">Reports</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.intro-header -->

<!-- Page Content -->
<a name="place_orders"></a>
<div class="content-section-a">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Place Orders</h2>

                <!--<div class="input-group">-->
                <!--<span class="input-group-addon" id="basic-addon1">Ingredient Orders</span>-->
                <!--<input type="text" class="form-control" placeholder="Add Ingredient Name to List"-->
                <!--aria-describedby="basic-addon1">-->
                <!--</div>-->

                <div class="row">
                    <% for (let i = 0; i < ingredientorder.length; i++) { %>
                    <% if (ingredientorder[i].approved === true) { %>
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3><%= ingredientorder[i].name %></h3>
                                <p>Order ID: <%= ingredientorder[i].orderid %></p>
                                <p>Category: <%= ingredientorder[i].category %></p>
                                <p>Count: <%= ingredientorder[i].count %></p>
                                <p>Price per item: $<%= ingredientorder[i].priceperitem %></p>
                                <p>Threshold: <%= ingredientorder[i].threshold %></p>
                                <div class="row">
                                    <form action="/delete" method="POST">
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" placeholder="Order ID"
                                                   aria-describedby="sizing-addon1" name="delete_orderID"/>
                                        </div>
                                        <div class="col-md-4">
                                            <input type="submit" value="Delete" class="btn btn-danger"/>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
                <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- /.container -->
</div>
<!-- /.content-section-a -->

<a name="approve_orders"></a>
<div class="content-section-b">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Approve Orders</h2>

                <div class="row">
                    <% for (let i = 0; i < ingredientorder.length; i++) { %>
                    <% if (ingredientorder[i].approved === false) { %>
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3><%= ingredientorder[i].name %></h3>
                                <p>Order ID: <%= ingredientorder[i].orderid %></p>
                                <p>Category: <%= ingredientorder[i].category %></p>
                                <p>Count: <%= ingredientorder[i].count %></p>
                                <p>Price per item: $<%= ingredientorder[i].priceperitem %></p>
                                <p>Threshold: <%= ingredientorder[i].threshold %></p>
                                <div class="row" style="padding-left:20px;">
                                    <form action="/approve" method="POST">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" placeholder="OrderID"
                                                       aria-describedby="basic-addon1" name="approve_orderID">
                                            </div>
                                            <div class="col-md-6">
                                                <input type="submit" value="Approve" class="btn btn-success"/>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="row" style="padding-left:20px; padding-top:20px">
                                    <form action="/delete" method="POST">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" placeholder="OrderID"
                                                       aria-describedby="basic-addon1" name="delete_orderID">
                                            </div>
                                            <div class="col-md-6">
                                                <input type="submit" value="Reject" class="btn btn-danger"/>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% } %>
                    <div>
                    </div>
                </div>
                <!-- /.container -->
            </div>
            <!-- /.content-section-b -->
        </div>
    </div>
</div>

<a name="admin_reports"></a>
<div class="content-section-a">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Reports</h2>

                <div class="row">
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Top 3 Ingredients</h3>
                            </div>
                            <div class="panel-body">
                                <ol>
                                    <li><%= ingredientorder[0].name %></li>
                                    <li><%= ingredientorder[1].name %></li>
                                    <li><%= ingredientorder[2].name %></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Most Frequently Requested Food</h3>
                            </div>
                            <div class="panel-body">
                                <%= ingredientorder[0].name %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Most Expensive Meal</h3>
                            </div>
                            <div class="panel-body">
                                Cheeseburger
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.content-section-a -->

<script src="../js/jquery.min.js"></script>
<script src="../js/bootstrap.min.js"></script>
</body>
</html>
