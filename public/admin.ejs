<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Smart Fridge</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/theme.css" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand topnav" href="/">Smart Fridge</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/user">User</a>
                    </li>
                    <li>
                        <a href="/chef">Chef</a>
                    </li>
                    <li>
                        <a href="/admin">Admin</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Header -->
    <div class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Administrator</h1>
                        <h3>Administrator Options</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <a href="#place_orders" class="btn btn-default btn-lg"><span class="network-name">Place Orders</span></a>
                            </li>
                            <li>
                                <a href="#approve_orders" class="btn btn-default btn-lg"><span class="network-name">Approve Orders</span></a>
                            </li>
                            <li>
                                <a href="#admin_reports" class="btn btn-default btn-lg"><span class="network-name">Reports</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->
    <a  name="place_orders"></a>
    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Place Orders</h2>

                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Ingredient Orders</span>
                        <input type="text" class="form-control" placeholder="Add Ingredient Name to List" aria-describedby="basic-addon1">
                    </div>

                    <div style="padding-top:20px">
                        <button type="button" class="btn btn-default" aria-label="Left Align">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                    </div>

                    <div style="padding-top: 30px">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-a -->

    <a  name="approve_orders"></a>
    <div class="content-section-b">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Approve Orders</h2>

                    <div class="row">
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <div class="caption">
                                    <h3>Tomatoes</h3>
                                    <p>Category: Vegetable</p>
                                    <p>Count: 0</p>
                                    <p>Price per item: $0.10</p>
                                    <p>Threshold: 2</p>
                                    <p>
                                        <a href="#" class="btn btn-success" role="button">Approve</a>
                                        <a href="#" class="btn btn-danger" role="button">Reject</a>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <div class="caption">
                                    <h3>Chicken Breasts</h3>
                                    <p>Category: Meat</p>
                                    <p>Count: 1</p>
                                    <p>Price per item: $3.00</p>
                                    <p>Threshold: 2</p>
                                    <p>
                                        <a href="#" class="btn btn-success" role="button">Approve</a>
                                        <a href="#" class="btn btn-danger" role="button">Reject</a>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <div class="caption">
                                    <h3>Mangoes</h3>
                                    <p>Category: Fruit</p>
                                    <p>Count: 0</p>
                                    <p>Price per item: $0.50</p>
                                    <p>Threshold: 2</p>
                                    <p>
                                        <a href="#" class="btn btn-success" role="button">Approve</a>
                                        <a href="#" class="btn btn-danger" role="button">Reject</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.container -->
        </div>
        <!-- /.content-section-b -->
    </div>

    <a  name="admin_reports"></a>
    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Reports</h2>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Top 3 Ingredients</h3>
                                </div>
                                <div class="panel-body">
                                    <ol>
                                        <li>Milk</li>
                                        <li>Eggs</li>
                                        <li>Flour</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Most Frequently Requested Food</h3>
                                </div>
                                <div class="panel-body">
                                    Cheese
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Most Expensive Meal</h3>
                                </div>
                                <div class="panel-body">
                                    Cheeseburger
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-a -->

    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>
